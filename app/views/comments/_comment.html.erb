<div class="comment clearfix">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= comment.body %>
        <%= time_ago_in_words(comment.created_at) %> ago

        <%= link_to "edit", edit_movier_comment_path(comment.movier, comment) %>
        <%= link_to "delete ", [comment.movier, comment], method: :delete, data: { confirm: "Are you sure?"} %>

      </div>
    </div>
  </div>
</div>
